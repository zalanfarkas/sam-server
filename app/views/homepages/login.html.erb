  <!--login form for both students and staff-->

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active login_link" href="#staff_login" role="tab" data-toggle="tab"><b>Staff Login</b></a>
  </li>
  <li class="nav-item">
    <a class="nav-link login_link" href="#student_link" role="tab" data-toggle="tab"><b>Student Login</b></a>
  </li>

</ul>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="staff_login">
    <br>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center mx-auto">
        <h2>Staff Log in</h2>
        
        <%= form_for(:staff, url: session_path(:staff)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
          </div>
        
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
          </div>
          
          <%= link_to "Forgot your password?", new_password_path(:staff) %><br />
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(:staff) %><br />
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>
      
      </div>
    </div>
  </div>
  <div role="tabpanel" class="tab-pane fade" id="student_link">
    <br>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center mx-auto">
        <h2>Student Log in</h2>
        
        <%= form_for(:student, url: session_path(:student)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
          </div>
        
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
          </div>
          
          <%= link_to "Forgot your password?", new_password_path(:student) %><br />
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(:student) %><br />
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        <% end %>
      
      </div>
    </div>
  </div>

</div>