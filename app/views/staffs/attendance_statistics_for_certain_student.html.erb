<div class="col-md-12 text-center mx-auto">
  
    <% if !@attendance_on_practicals.nil? %>
    <div class="row">
      <div class="col-md-8 offset-2">
    <button type="button" class="btn btn-dark btn-block"><span class="float-left"><%= @student.first_name %> <%= @student.last_name %></span> <span class="float-right">Course: <%= @course.course_title %></span></button>
    <table class="table table table-hover">
        <thead>
          <tr>
            <th>Week number</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
        <% @attendance_on_practicals.each_with_index do |attendance, index| %>
          <tr>
            <td><%= index+1 %></td>
            <% if attendance == true then %>
              <td class="table-success"><i class="fa fa-check-circle"></i> 
            <% else %>
              <td class="table-danger"><i class="fa fa-times-circle"></i> 
            <% end %>
          </tr>
      <% end %>
      </table>
    
    </div>
    </div>
  <% end %>
  <hr>
  <h5>Search Attendance Statistics for certain Student</h5>
  <div class="row">
    <div class="col-md-6 offset-3">
      <%=form_tag({controller: "staffs", action: "attendance_statistics_for_certain_student"}, method: "get", class: "nifty_form") do %>
        <div class="form-group">
          <%= text_field_tag :sam_student_id, nil, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Enter Student ID" %>
          </div>
        <div class="form-group">
          <%= select_tag :course_id, options_for_select(@courses.map{|course| ["#{course.course_title}", course.id]}), {class: "form-control"}%>
        </div>
        <div class="actions">
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>